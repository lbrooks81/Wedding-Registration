@model Registration
@{
    ViewBag.Title = "Detail";
}

<h1>Registration Detail</h1>
<div id="bunger">
<form asp-action="UpdateRegistration" method="post">
    <table class="table table-bordered table-striped" id="table">
        <tr>
            <td>ID</td>
            <td>
                @Model.Id
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
            </td>
        </tr>
        <tr>
            <td>First Name</td>
            <td>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" required/>
            </td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>
                <input asp-for="LastName" class="form-control" value="@Model.LastName" required />
            </td>
        </tr>
        <tr>
            <td>Guests</td>
            <td>
                <input asp-for="Gifts" class="form-control" value="@Model.Gifts" required />
            </td>
        </tr>
    </table>

    <a asp-controller="Home" asp-action="Index"
        class="btn btn-secondary btns" id="return-btn">Return to List</a>
    <button type="reset" class="btn btn-warning btns">Revert Changes</button>
    <button type="submit" class="btn btn-primary btns">Save Changes</button>
</form>

<form asp-action="DeleteRegistration" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger btns"
            onclick="return confirm('Are you sure you want to delete this guest?');">
        Remove Guest
    </button>
</form>
</div>

<script type="module" src="~/js/detail.js"></script>