@model List<Registration>
@{
    ViewBag.Title = "Registration List";
}

<h1>Registration List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Number of Guests</th>
        <th>Gifts</th>
    </thead>
    <tbody>
        @foreach (Registration r in Model)
        {
            <tr>
                <td>
                    <a asp-asp-controller="Home" asp-action="Detail" 
                        asp-route-id="@r.Id"> @r.Id
                    </a>
                </td>
                <td>
                    @r.FirstName
                </td>
                <td>
                    @r.LastName
                </td>
                <td>
                    @r.NumberOfGuests
                </td>
                <td>
                    @r.Gifts
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary">
    <a class="nav-link" style="color: white;" asp-area="" asp-controller="Home" asp-action="Create">Create Registration</a>
</button>

