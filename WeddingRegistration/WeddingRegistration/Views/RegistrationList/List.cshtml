@model List<Registration>
@{
    ViewBag.Title = "Registration List";   
}

<h1>Registration List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Number of Guests</th>
        <th>Number of Gifts</th>
    </thead>
    <tbody>
        @foreach(Registration r in Model)
        {
            <tr>
                <td>@r.FirstName</td>
                <td>@r.LastName</td>
                <td>@r.NumberOfGuests</td>
                <td>
                    <a asp-controller="RegistrationList" asp-action="Gifts"> // TODO asp-route-id
                        @r.Gifts.Count
                    </a>
                </td>
            </tr>
        }

    </tbody>
    

</table>